---
// src/components/Footer.astro (FINAL HYBRID VERSION)
import SocialIcon from './common/SocialIcon.astro'; // <-- Our new manual component

const socialLinks = [
  { href: "https://x.com/cvjimeno", name: "x", label: "X/Twitter" }, 
  { href: "https://linkedin.com/in/cvjimeno/", name: "linkedin", label: "LinkedIn" },
];
---
<footer class="border-t border-border-subtle mt-16 md:mt-24">
  <div class="container mx-auto px-4 py-4 md:py-6 md:px-8 flex flex-col md:flex-row justify-between items-center text-sm">
    <div class="flex flex-col md:flex-row items-center justify-center gap-x-3 gap-y-2 text-text-secondary mb-4 md:mb-0">
      <span class="inline-flex items-center">
        Hecho en mis ratos libres con
        <SocialIcon name="astro" class="w-5 h-5 mx-1.5 fill-current" />
        Astro
      </span>
      <span class="hidden md:inline">·</span>
      <span>© {new Date().getFullYear()} Carlos Velasco. Sin derechos reservados :)</span>
    </div>
    <div class="flex space-x-4">
      {socialLinks.map(social => (
        <a 
          href={social.href} 
          aria-label={social.label}
          target="_blank" 
          rel="noopener noreferrer"
          class="text-text-secondary hover:text-accent-primary transition-colors duration-150 ease-in-out"
        >
          <SocialIcon name={social.name} class="w-5 h-5 md:w-6 md:h-6 fill-current" />
        </a>
      ))}
    </div>
  </div>
</footer>