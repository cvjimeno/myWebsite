---
// filepath: src/components/cards/BlogCardHomepage.astro
import { Image } from 'astro:assets';
import Icon from '../common/Icon.astro';
// Import our new utility function
import { getTagClasses } from '../../utils/tagUtils';

export interface Props {
  href: string;
  image?: ImageMetadata;
  imageUrl?: string;
  imageAlt: string;
  title: string;
  excerpt: string;
  date: string;
  readingTime: string;
  tags?: string[];
}

const {
  href,
  image,
  imageUrl,
  imageAlt,
  title,
  excerpt,
  date,
  readingTime,
  tags,
} = Astro.props;

const imageSource = image || imageUrl;

if (!imageSource) {
  throw new Error('A BlogCardHomepage component requires either an `image` (local) or `imageUrl` (remote) prop.');
}
---

<article 
    class="bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300 overflow-hidden flex flex-col h-full group"
    data-tags={tags ? tags.join(',').toLowerCase() : ''}
>
  <div class="relative">
    <a href={href} aria-label={`Leer mÃ¡s sobre ${title}`} class="block overflow-hidden aspect-video">
      <Image
        src={imageSource}
        alt={imageAlt}
        width={800}
        height={450}
        format="webp"
        class="w-full h-full object-cover transition-transform duration-300 ease-in-out group-hover:scale-105"
      />
    </a>
  </div>
  
  <div class="p-5 flex flex-col flex-grow">
    <!-- THE FIX FOR TAGS IS HERE: Moved below the image, using our new color system -->
    {tags && tags.length > 0 && (
      <div class="flex gap-2 mb-3">
        {tags.slice(0, 3).map(tag => {
          const tagClasses = getTagClasses(tag); // Get the color classes
          return (
            <span class:list={[
              "text-xs font-semibold px-3 py-1 rounded-lg", // Base styles
              tagClasses // Dynamic color styles
            ]}>
              {tag}
            </span>
          )
        })}
      </div>
    )}

    <h3 class="text-xl font-semibold text-text-primary mb-2 leading-snug">
      <a href={href} class="hover:text-accent-blue transition-colors">
        {title}
      </a>
    </h3>

    <p class="text-sm text-text-secondary mb-4 leading-relaxed flex-grow line-clamp-3">
      {excerpt}
    </p>

    <div class="mt-auto pt-3 border-t border-border-card flex justify-between items-center text-xs text-text-secondary">
      <span class="font-medium">{date}</span>
      <div class="flex items-center gap-x-1">
        <Icon name="hourglass" class="w-3 h-3" />
        <span>{readingTime}</span>
      </div>
    </div>
  </div>
</article>