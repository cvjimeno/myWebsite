---
// src/layouts/BaseLayout.astro
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
// ... other props and imports
export interface Props {
    title: string;
}
const { title } = Astro.props;

---
<html lang="es"> {/* Changed lang to Spanish */}
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> {/* Make sure you have a favicon */}
    <meta name="generator" content={Astro.generator} />
    <title>{title} | El Blog de CV</title> {/* Example title format */}

    {/* Add Inter font from Google Fonts (example) - or self-host */}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    {/* Add any other head elements: meta descriptions, etc. */}
</head>
<body class="bg-bg-primary text-text-primary font-sans"> {/* Applied base classes */}
    <Header /> 
    <main>
        <slot /> 
    </main>
    <Footer />
</body>
</html>
