---
// src/components/common/Badge.astro
export interface Props {
  text: string;
  variant?: 'color' | 'neutral' | 'award';
  awardType?: 'gold' | 'silver';
  class?: string;
}

const { 
  text, 
  variant = 'color', 
  awardType,
  class: customClass 
} = Astro.props;

const baseClasses = "text-xs font-semibold px-3 py-1 rounded-full border";

const highContrastColorMap: Record<string, string> = {
  'ia': 'bg-blue-100 text-blue-700 border-blue-200 dark:bg-[#154360] dark:text-[#AED6F1] dark:border-[#AED6F1]/30',
  'tecnología': 'bg-emerald-100 text-emerald-700 border-emerald-200 dark:bg-[#145A32] dark:text-[#A9DFBF] dark:border-[#A9DFBF]/30',
  'futuro': 'bg-violet-100 text-violet-700 border-violet-200 dark:bg-[#4A235A] dark:text-[#D2B4DE] dark:border-[#D2B4DE]/30',
  'innovación': 'bg-violet-100 text-violet-700 border-violet-200 dark:bg-[#4A235A] dark:text-[#D2B4DE] dark:border-[#D2B4DE]/30',
  'reflexión': 'bg-pink-100 text-pink-700 border-pink-200 dark:bg-[#78281F] dark:text-[#F5B7B1] dark:border-[#F5B7B1]/30',
  'ética': 'bg-pink-100 text-pink-700 border-pink-200 dark:bg-[#78281F] dark:text-[#F5B7B1] dark:border-[#F5B7B1]/30',
  'programación': 'bg-sky-100 text-sky-700 border-sky-200 dark:bg-[#1A5276] dark:text-[#A9CCE3] dark:border-[#A9CCE3]/30',
  'herramientas': 'bg-slate-100 text-slate-700 border-slate-200 dark:bg-[#2E4053] dark:text-[#AAB7B8] dark:border-[#AAB7B8]/30',
  'cositas': 'bg-gray-100 text-gray-700 border-gray-200 dark:bg-gray-800 dark:text-gray-300 dark:border-gray-500/50',
};

const defaultColorClasses = 'bg-gray-100 text-gray-700 border-gray-200 dark:bg-gray-800 dark:text-gray-300 dark:border-gray-500/50';

let variantClasses = '';
switch (variant) {
  case 'neutral':
    variantClasses = 'bg-bg-secondary text-text-secondary border-border-card dark:bg-bg-primary dark:text-text-secondary';
    break;
  case 'award':
    if (awardType === 'gold') {
      variantClasses = 'bg-amber-100 text-amber-800 border-amber-300 dark:bg-amber-900/50 dark:text-amber-300 dark:border-amber-500/50';
    } else if (awardType === 'silver') {
      variantClasses = 'bg-slate-100 text-slate-700 border-slate-200 dark:bg-slate-700 dark:text-slate-200 dark:border-slate-500/50';
    }
    break;
  case 'color':
  default:
    variantClasses = highContrastColorMap[text.toLowerCase()] || defaultColorClasses;
    break;
}
---
<span class:list={[baseClasses, variantClasses, customClass]}>{text}</span>