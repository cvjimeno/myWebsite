---
// src/components/blog/HeroBanner.astro
export interface Props {
  title: string;
  tagline?: string;
  themeColor: 'blue' | 'purple' | 'green'; // We can expand this
}
const { title, tagline, themeColor } = Astro.props;

// A map to translate a theme name into a real Tailwind CSS class
const colorClassMap = {
  blue: 'bg-blue-600',
  purple: 'bg-purple-600',
  green: 'bg-green-600',
};
---

<section class:list={["relative overflow-hidden py-24 md:py-32", colorClassMap[themeColor]]}>
  <!-- This div applies the SVG pattern with a low opacity on top of the solid background color -->
  <div class="absolute inset-0 bg-[url('/neural-pattern.svg')] bg-repeat opacity-10"></div>
  
  <div class="relative z-10 container mx-auto px-4 text-center">
    <h1 class="text-4xl md:text-6xl font-bold text-white text-balance mb-4">
      {title}
    </h1>
    {tagline && (
      <p class="text-lg md:text-xl text-white/80 max-w-2xl mx-auto">
        {tagline}
      </p>
    )}
  </div>
</section>