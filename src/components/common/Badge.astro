---
// src/components/common/Badge.astro
export interface Props {
  text: string;
  variant?: 'color' | 'neutral' | 'award';
  awardType?: 'gold' | 'silver';
  class?: string;
}

const { 
  text, 
  variant = 'color', 
  awardType,
  class: customClass 
} = Astro.props;

const baseClasses = "text-xs font-semibold px-3 py-1 rounded-lg";


const highContrastColorMap: Record<string, string> = {
  'ia': 'bg-blue-100 text-blue-800 text-xs font-medium rounded-lg dark:bg-blue-900 dark:text-blue-300',
  'tecnología': 'bg-gray-100 text-gray-800 text-xs font-medium  rounded-lg dark:bg-gray-700 dark:text-gray-300',
  'futuro': 'bg-red-100 text-red-800 text-xs font-medium  rounded-lg dark:bg-red-900 dark:text-red-300',
  'innovación': 'bg-green-100 text-green-800 text-xs font-medium  rounded-lg dark:bg-green-900 dark:text-green-300',
  'reflexión': 'bg-yellow-100 text-yellow-800 text-xs font-medium  rounded-lg dark:bg-yellow-900 dark:text-yellow-300"',
  'ética': 'bg-indigo-100 text-indigo-800 text-xs font-medium  rounded-lg dark:bg-indigo-900 dark:text-indigo-300',
  'herramientas': 'bg-purple-100 text-purple-800 text-xs font-medium  rounded-lg dark:bg-purple-900 dark:text-purple-300',
  'cositas': 'bg-pink-100 text-pink-800 text-xs font-medium  rounded-lg dark:bg-pink-900 dark:text-pink-300'
};

const defaultColorClasses = 'bg-gray-100 text-gray-700 border-gray-200 dark:bg-gray-800 dark:text-gray-300 dark:border-gray-500/50';

let variantClasses = '';
switch (variant) {
  case 'neutral':
    variantClasses = 'bg-bg-secondary text-text-secondary border-border-card dark:bg-bg-primary dark:text-text-secondary';
    break;
  case 'award':
    if (awardType === 'gold') {
      variantClasses = 'bg-amber-100 text-amber-800 border-amber-300 dark:bg-amber-900/50 dark:text-amber-300 dark:border-amber-500/50';
    } else if (awardType === 'silver') {
      variantClasses = 'bg-slate-100 text-slate-700 border-slate-200 dark:bg-slate-700 dark:text-slate-200 dark:border-slate-500/50';
    }
    break;
  case 'color':
  default:
    variantClasses = highContrastColorMap[text.toLowerCase()] || defaultColorClasses;
    break;
}
---
<span class:list={[baseClasses, variantClasses, customClass]}>{text}</span>