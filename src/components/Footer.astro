---
// src/components/Footer.astro (FINAL POLISHED VERSION)
import SocialIcon from './common/SocialIcon.astro';

const publicationName = "El Prompt"; 

const socialLinks = [
  { href: "https://x.com/cvjimeno", name: "x", label: "X/Twitter" }, 
  { href: "https://linkedin.com/in/cvjimeno/", name: "linkedin", label: "LinkedIn" },
];
---
<footer class="bg-bg-secondary dark:bg-bg-primary border-t border-border-card mt-20 md:mt-28">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-10">
    <div class="flex flex-col md:flex-row justify-between items-center md:items-start gap-y-8">
      <div class="text-center md:text-left">
        {/* FIX: Removed opacity from text-text-secondary */}
        <div class="flex items-center justify-center md:justify-start gap-1.5 text-sm text-text-secondary">
          <span>Hecho en mis ratos libres con</span>
          <div class="inline-flex items-center gap-1.5 font-medium text-text-secondary">
            <SocialIcon name="astro" class="w-4 h-4" />
            <span>Astro</span>
          </div>
        </div>
        {/* FIX: Removed opacity from text-text-secondary */}
        <p class="mt-1 text-xs text-text-secondary">
          ... y con ayuda de Gemini 1.5 Pro
        </p>
      </div>
      
      <div class="flex items-center gap-x-5">
        <div class="flex items-center gap-x-4">
          {socialLinks.map(social => (
            <a 
              href={social.href} 
              aria-label={social.label}
              target="_blank" 
              rel="noopener noreferrer"
              class="text-text-secondary hover:text-accent-primary transition-colors duration-200"
            >
              <SocialIcon name={social.name} class="w-5 h-5 fill-current" />
            </a>
          ))}
        </div>
        
        <span class="hidden md:block h-6 w-px bg-border-subtle"></span>

        <!-- THE FIX: The subscription link now includes the logomark -->
        <a href="/blog/#newsletter-cta" class="group text-sm font-medium text-text-secondary hover:text-text-primary transition-colors flex items-center gap-x-1.5">
          <span>Suscríbete a</span>
          <span class="font-semibold text-text-primary group-hover:text-accent-primary transition-colors flex items-center gap-x-1">
            <span class="text-accent-primary">>>></span>
            <span>{publicationName}</span>
          </span>
        </a>
      </div>

    </div>
    <div class="mt-10 pt-8 border-t border-border-card text-center text-xs text-text-secondary">
      <span>© {new Date().getFullYear()} Carlos Velasco. Sin derechos reservados :)</span>
    </div>
  </div>
</footer>