---
// src/components/common/Badge.astro
import { getCategoryClasses, neutralTagClasses } from '../../utils/tagUtils';

export interface Props {
  text: string;
  variant: 'category' | 'tag';
  class?: string;
}

const { text, variant, class: customClass } = Astro.props;

// Base classes are the same, but we make the font slightly bolder for better legibility.
const baseClasses = "text-xs font-medium px-3 py-1 rounded-full";

// Logic is now a simple ternary.
const variantClasses = variant === 'category'
  ? getCategoryClasses(text)
  : neutralTagClasses;
---
<span class:list={[baseClasses, variantClasses, customClass]}>{text}</span>