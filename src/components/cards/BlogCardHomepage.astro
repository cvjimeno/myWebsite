---
// filepath: /Users/carlos/Documents/Website/myWebsite/src/components/cards/BlogCardHomePage.astro
import Icon from '../common/Icon.astro'; // Ensure this path is correct
export interface Props {
  href: string;
  imageUrl?: string;
  imageAlt?: string;
  title: string;
  excerpt?: string;
  date: string;
  readingTime: string;
}
const {
  href,
  imageUrl,
  imageAlt = "Imagen destacada del post",
  title,
  excerpt,
  date,
  readingTime,
} = Astro.props;
---

<article
  class="bg-white rounded-xl shadow-md hover:shadow-xl transition-shadow duration-300 ease-in-out overflow-hidden flex flex-col h-full max-w-[360px] mx-auto"
>
  {
    imageUrl && (
      <a href={href} aria-label={'Leer más sobre ${title}'} class="block">
        <img
          src={imageUrl}
          alt={imageAlt}
          class="w-full h-44 object-cover" 
        />
      </a>
    )
  }
  <div class="p-5 flex flex-col flex-grow">
    {/* TAGS WILL GO HERE IN ITERATION 2 */}

    <h3 class="text-xl font-semibold text-text-primary mb-2 leading-snug">
      {/* Adjust text-xl (20px) as per Figma */}
      <a href={href} class="hover:text-accent-blue transition-colors">
        {title}
      </a>
    </h3>

    {
      excerpt && (
        <p class="text-sm text-text-secondary mb-3 leading-relaxed flex-grow">
          {/* Adjust text-sm (14px) as per Figma */}
          {excerpt}
        </p>
      )
    }

    <div class="mt-auto pt-3 border-t border-border-card">
      <a
        href={href}
        class="inline-block text-sm text-accent-blue font-medium mt-2 hover:underline underline-offset-2"
      >
        Sigue leyendo →
      </a>
      <div class="flex justify-between items-center text-xs text-text-secondary">
        <span>{date}</span>
        <div class="flex items-center">
          <Icon name="hourglass" class="w-3 h-3 mr-1 text-text-secondary" />
          <span>{readingTime}</span>
        </div>
      </div>
    </div>
  </div>
</article>