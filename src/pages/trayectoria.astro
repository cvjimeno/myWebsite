// --- YOUR CAREER DATA ---
// This is where you'll define your career history.
// Based on your Figma screenshot:
const careerPath = [
  {
    logoSrc: philipsLogo, // Replace with your actual logo path
    logoAlt: 'Philips Logo',
    role: 'Clinical Scientist',
    institutionName: 'Philips',
    institutionColorClass: 'text-accent-blue', // From your tailwind.config.js
    dates: 'Ene 2025 - Actualidad',
    descriptionLines: [
      'Blka blabi blab. Ayudando a bbans en + 15 centros de investigación y hospitalres de Referencia en Iberi.a sfasdf sd asdf',
      'asdfasdfasdfasdfasdfasdfasdfaBlka blabi blab. Ayudando a bbans en + 15 centros de investigación y hospitalres de Referencia en Iberi.a sfasdf sd asdf',
      'asdfasdfasdfasdfasdfasdfa',
      'Blka blabi blab. Ayudando a bbans en + 15 centros de investigación y hospitalres de Referencia en Iberi.a sfasdf sd'
    ],
    // ctaLink: '#', // Optional CTA
    // ctaText: 'View Project', // Optional CTA
  },
  {
    logoSrc: kclLogo, // Replace with your actual logo path
    logoAlt: "King's College London Logo",
    role: 'Investigador Post-Doctoral',
    institutionName: "King's College London",
    institutionColorClass: 'text-[#D32F2F]', // Example: Direct red color (adjust hex code)
    dates: 'Diciembre 2019 - Diciembre 2024',
    descriptionLines: [
      'Blka blabi blab. Ayudando a bbans en + 15 centros de investigación y hospitalres de Referencia en Iberi.a sfasdf sd asdf',
      'asdfasdfasdfasdfasdfasdfa',
    ],
    ctaLink: '#some-research-link', // Example CTA
    ctaText: 'Some Related Work',
  },
  {
    logoSrc: cnicLogo, // Replace with your actual logo path
    logoAlt: 'CNIC Logo',
    role: 'Investigador Pre-Doctoral',
    institutionName: 'Centro Nacional de Investigaciones Cardiovasculares (CNIC)',
    institutionColorClass: 'text-[#another_red_or_specific_color]', // Example specific color for CNIC
    dates: 'Septiembre 2015 - Noviembre 2019',
    descriptionLines: [
      'Blka blabi blab. Ayudando a bbans en + 15 centros de investigación y hospitalres de Referencia en Iberi.a sfasdf sd',
      'asdfasdfasdfasdfasdfasdfa',
    ],
    ctaLink: '#thesis-link', // Example CTA
    ctaText: 'Lee mi Tesis Doctoral',
  },
  // Add more items as needed
];

const pageTitle = "Mi Trayectoria";
const introText = "Aquí puedes encontrar un resumen de mi camino profesional y académico, destacando los roles clave y proyectos en los que he tenido el placer de trabajar. Desde la investigación fundamental hasta la aplicación de la ciencia en entornos clínicos e industriales, mi objetivo siempre ha sido aprender, innovar y contribuir.";
---

<BaseLayout title={pageTitle}>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16"> {/* Page content wrapper */}
    
    <h1 class="text-5xl md:text-6xl font-bold text-text-primary mb-6 text-center md:text-left"> {/* H1 from Figma, possibly text-6xl is your H2 (64px), H1 (84px) is larger */}
      {pageTitle}
    </h1>

    {introText && (
      <div class="prose prose-lg text-text-secondary max-w-3xl mb-12 md:mb-16 mx-auto md:mx-0 text-center md:text-left"> {/* Centered on mobile, left on md+ */}
        <p>{introText}</p>
      </div>
    )}

    {/* Planned sections (as per your Figma): */}
    {/* Visual Timeline Section */}
    <section id="timeline" aria-labelledby="timeline-heading">
      <h2 id="timeline-heading" class="sr-only">Línea de Tiempo Profesional</h2> {/* Screen-reader only heading */}
      
      {/* The Timeline Itself - Using an <ol> for semantic ordered list of experiences */}
      <ol class="relative"> {/* `relative` is if we add the vertical line later */}
        {careerPath.map((item, index) => (
          <TimelineItem
            logoSrc={item.logoSrc}
            logoAlt={item.logoAlt}
            role={item.role}
            institutionName={item.institutionName}
            institutionColorClass={item.institutionColorClass}
            dates={item.dates}
            descriptionLines={item.descriptionLines}
            ctaLink={item.ctaLink}
            ctaText={item.ctaText}
            isLastItem={index === careerPath.length - 1} {/* Pass isLastItem here */}
          />
        ))}
      </ol>
    </section>

   
    {/* === CONOCE MI INVESTIGACIÓN Section === */}
    <section id="investigacion" class="mt-16 md:mt-24 py-12 md:py-16 text-center">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-[64px] leading-[78px] tracking-[-0.015em] font-semibold text-text-primary mb-10 md:mb-12">
          Conoce Mi Investigación
        </h2>
        
        <div class="flex flex-col sm:flex-row flex-wrap justify-center items-center gap-x-6 sm:gap-x-8 gap-y-4"> {/* Added flex-wrap and refined gap */}
          <a 
            href="#YOUR_RESEARCHGATE_LINK"  
            target="_blank" 
            rel="noopener noreferrer"
            class="text-lg text-accent-blue hover:text-blue-700 hover:underline underline-offset-4 font-medium transition-colors duration-150 ease-in-out"
          >
            ResearchGate <span aria-hidden="true">→</span> {/* Optional arrow for visual cue */}
          </a>
          <a 
            href="#YOUR_GOOGLE_SCHOLAR_LINK"
            target="_blank" 
            rel="noopener noreferrer"
            class="text-lg text-accent-blue hover:text-blue-700 hover:underline underline-offset-4 font-medium transition-colors duration-150 ease-in-out"
          >
            Google Scholar <span aria-hidden="true">→</span> {/* Optional arrow */}
          </a>
          <a 
            href="#YOUR_THESIS_LINK" 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-lg text-accent-blue hover:text-blue-700 hover:underline underline-offset-4 font-medium transition-colors duration-150 ease-in-out"
          >
            Mi Tesis Doctoral <span aria-hidden="true">→</span> {/* Optional arrow */}
          </a>
        </div>
      </div>
    </section>
    
  </div>
</BaseLayout>

