---
// src/pages/contacto.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import Icon from '../components/common/Icon.astro';

const socialLinks = [
  { href: "https://x.com/yourprofile", icon: "x", label: "X / Twitter" },
  { href: "https://linkedin.com/in/yourprofile", icon: "linkedin", label: "LinkedIn" },
];

// Define a new, much cleaner base style for our form fields.
const fieldWrapperClasses = "space-y-1"; // A container for the label and the input
const labelClasses = "text-sm font-medium text-text-secondary";
const inputClasses = "w-full bg-bg-secondary border-2 border-border-subtle rounded-lg px-4 py-2.5 transition duration-200 focus:outline-none focus:ring-2 focus:ring-accent-blue/50 focus:border-accent-blue";
---

<BaseLayout title="Hablemos">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24">
    
    <header class="text-center mb-12">
      <h1 class="text-5xl md:text-6xl font-bold text-text-primary mb-4">
        ¿Hablemos?
      </h1>
      <p class="text-lg text-text-secondary leading-relaxed">
        Tengo curiosidad por tus ideas. Si crees que podemos crear algo juntos, o si simplemente tienes una pregunta, este es el lugar.
      </p>
    </header>

    <!-- FORM SECTION with a much cleaner design -->
    <div class="bg-white p-8 md:p-10 rounded-xl shadow-lg border border-border-card">
      <form class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-6">
        
        <!-- Name Field -->
        <div class:list={[fieldWrapperClasses, "md:col-span-1"]}>
          <label for="name" class={labelClasses}>Nombre</label>
          <input type="text" id="name" name="name" class={inputClasses} />
        </div>

        <!-- Email Field -->
        <div class:list={[fieldWrapperClasses, "md:col-span-1"]}>
          <label for="email" class={labelClasses}>Email</label>
          <input type="email" id="email" name="email" class={inputClasses} />
        </div>

        <!-- Subject Field (Full Width) -->
        <div class:list={[fieldWrapperClasses, "md:col-span-2"]}>
          <label for="subject" class={labelClasses}>El motivo de tu mensaje</label>
          <select id="subject" name="subject" class={inputClasses}>
            <option>Propuesta de Colaboración</option>
            <option>Feedback sobre un post</option>
            <option>Pregunta rápida</option>
            <option>Otro</option>
          </select>
        </div>

        <!-- Message Field (Full Width) -->
        <div class:list={[fieldWrapperClasses, "md:col-span-2"]}>
          <label for="message" class={labelClasses}>Tu mensaje</label>
          <textarea id="message" name="message" rows="5" class={inputClasses}></textarea>
        </div>

        <!-- Disabled Submit Button (Right-Aligned) -->
        <div class="md:col-span-2 flex justify-end items-center gap-x-4 pt-4">
           <p class="text-sm text-text-secondary italic">El formulario se activará próximamente.</p>
           <button 
            type="submit" 
            disabled 
            class="px-6 py-3 bg-accent-blue text-white font-semibold rounded-lg shadow-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent-blue transition-all duration-200 disabled:bg-gray-300 disabled:shadow-none disabled:cursor-not-allowed disabled:transform-none hover:scale-105"
          >
            Enviar
          </button>
        </div>
      </form>
    </div>

    <!-- SOCIALS SECTION -->
    <div class="text-center mt-16">
        <h3 class="text-xl font-semibold text-text-primary mb-4">O encuéntrame aquí:</h3>
         <div class="flex justify-center gap-6">
          {socialLinks.map(social => (
            <a 
              href={social.href} 
              target="_blank" 
              rel="noopener noreferrer"
              aria-label={social.label}
              class="text-text-secondary hover:text-accent-blue transition-transform duration-200 hover:scale-110"
            >
              <Icon name={social.icon} size="w-7 h-7" />
            </a>
          ))}
        </div>
    </div>
  </div>
</BaseLayout>