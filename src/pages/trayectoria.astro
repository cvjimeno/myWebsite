<script>
  function setupTimelineAnimations() {
    const timelineItems = Array.from(
      document.querySelectorAll(".timeline-item")
    );
    const fuse = document.getElementById("timeline-fuse");

    if (!timelineItems.length || !fuse) return;

    const handleScroll = () => {
      // --- First calculate normal fuse line animation ---
      const firstItem = timelineItems[0];
      const lastItem = timelineItems[timelineItems.length - 1];
      const startY = firstItem.offsetTop;
      const endY = lastItem.offsetTop + lastItem.offsetHeight;
      const totalHeight = endY - startY;
      let scrollProgress = window.scrollY - startY;
      let progressPercentage = (scrollProgress / totalHeight) * 100;

      // --- Combined active state logic ---
      const fuseBottom =
        fuse.getBoundingClientRect().top + fuse.offsetHeight + window.scrollY;
      let closestActiveId = null;
      let minDelta = Infinity;

      for (const item of timelineItems) {
        // --- Logic for Logo Scaling ---
        const logoNode = item.querySelector(".logo-node") as HTMLElement;
        if (logoNode) {
          const logoCenter =
            logoNode.getBoundingClientRect().top +
            logoNode.clientHeight / 2 +
            window.scrollY;
          const delta = fuseBottom - logoCenter;
          if (delta >= -10 && delta < minDelta) {
            minDelta = delta;
            closestActiveId = item.id;
          }

          // --- Animate blue circle progress ONLY when active ---
          if (item.id === closestActiveId && delta >= -10) {
            // Set circle to complete immediately
            logoNode.style.setProperty("--circle-progress", "1");
          } else {
            // Reset progress when not active
            logoNode.style.setProperty("--circle-progress", "0");
          }
        }

        // --- Logic for Illustration Grayscale ---
        const itemRect = item.getBoundingClientRect();
        const illustrationTriggerPoint =
          itemRect.top + window.scrollY + itemRect.height * 0.5;
        item.classList.toggle(
          "is-illustrations-active",
          fuseBottom >= illustrationTriggerPoint
        );
      }

      // --- Apply active class for logo scaling ---
      for (const item of timelineItems) {
        item.classList.toggle("is-active", item.id === closestActiveId);
      }

      // --- Fuse line animation (progresses only when no active circle) ---
      if (!closestActiveId) {
        fuse.style.height = `${Math.max(0, Math.min(100, progressPercentage))}%`;
      } else {
        // Get the active logo node
        const activeLogoNode = document
          .getElementById(closestActiveId)
          ?.querySelector(".logo-node") as HTMLElement;
        if (activeLogoNode) {
          // Get the current circle progress
          const circleProgress = parseFloat(
            getComputedStyle(activeLogoNode).getPropertyValue(
              "--circle-progress"
            ) || "0"
          );

          // If circle is complete, set fuse to 100%
          if (circleProgress >= 0.98) {
            fuse.style.height = `${Math.max(0, Math.min(100, progressPercentage))}%`;
          } else {
            // Otherwise, stop the fuse at the previous item's bottom
            const prevItemIndex =
              timelineItems.indexOf(
                document.getElementById(closestActiveId) as Element
              ) - 1;
            if (prevItemIndex >= 0) {
              const prevItem = timelineItems[prevItemIndex];
              const prevItemBottom =
                prevItem.offsetTop + prevItem.offsetHeight - startY;
              progressPercentage = (prevItemBottom / totalHeight) * 100;
              fuse.style.height = `${Math.max(0, Math.min(100, progressPercentage))}%`;
            } else {
              // If it's the first item, start from the top
              fuse.style.height = "0%";
            }
          }
        }
      }
    };

    document.addEventListener("scroll", handleScroll, { passive: true });
    document.addEventListener(
      "astro:before-swap",
      () => {
        document.removeEventListener("scroll", handleScroll);
      },
      { once: true }
    );
    handleScroll();
  }

  document.addEventListener("astro:page-load", setupTimelineAnimations);
</script>

